        <ImageView android:layout_toRightOf="@id/detail_type_tip" style="@style/Line_LineImage" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/pay_area" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/detail_txt_cost_margin_top" android:layout_marginBottom="35.0px" android:layout_alignParentBottom="true">
