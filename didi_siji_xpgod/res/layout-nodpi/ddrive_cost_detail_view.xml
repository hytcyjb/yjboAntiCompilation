            <TextView android:id="@id/cost_detail_txt_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ddrive_detail_total_cost" android:layout_alignBaseline="@id/cost_detail_txt_cost" android:layout_alignBottom="@id/cost_detail_txt_cost" android:layout_alignParentLeft="true" style="@style/TextView.DarkGray.Small" />
            <TextView android:id="@id/cost_detail_txt_tips_yuan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pay_yuan" android:layout_alignBaseline="@id/cost_detail_txt_cost" android:layout_alignBottom="@id/cost_detail_txt_cost" android:layout_alignParentRight="true" style="@style/TextView.DarkGray.Small" />
