            <com.didi.ddrive.ui.component.DDriveOrderPayView android:gravity="center_horizontal" android:id="@id/cost_pay" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/ddrive_order_pay_line" android:layout_centerHorizontal="true" />
            <com.didi.ddrive.ui.component.DDriveOrderPayMethodView android:id="@id/pay_method_view" android:scrollbars="none" android:layout_width="@dimen/detail_txt_items_width" android:layout_height="wrap_content" android:layout_below="@id/cost_pay" android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>