<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:x="http://schemas.android.com/apk/res-auto">
    <x.RelativeLayout android:gravity="center" android:id="@id/line_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/cancel_trip_tip_margin_top">
        <x.ImageView android:id="@id/pay_line_left" style="@style/Line_LineImage" />
        <TextView android:id="@id/pay_type_tip" android:text="@string/ddrive_cancel_title" android:layout_toRightOf="@id/pay_line_left" style="@style/Line_TipText" />
        <x.ImageView android:layout_toRightOf="@id/pay_type_tip" style="@style/Line_LineImage" />
    </x.RelativeLayout>
    <x.ImageView android:id="@id/cancel_trip_icon_image" android:layout_width="@dimen/cancel_trip_icon_size" android:layout_height="@dimen/cancel_trip_icon_size" android:layout_marginTop="@dimen/cancel_trit_icon_margin_top" android:layout_below="@id/line_layout" android:layout_centerHorizontal="true" x:src="@drawable/ddrive_cancel_trip_icon" />
    <TextView android:id="@id/cancel_trip_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/cancel_trip_text_margin_top" android:layout_marginTop="@dimen/cancel_trip_text_margin_top" android:layout_marginRight="@dimen/cancel_trip_text_margin_top" android:text="@string/cancel_trip_confirmed" android:layout_below="@id/cancel_trip_icon_image" android:layout_centerHorizontal="true" style="@style/TextView.Gray.Medium" />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/cancel_trip_item_margin" android:layout_marginTop="@dimen/cancel_trip_text_margin_top" android:layout_marginRight="@dimen/cancel_trip_item_margin" android:layout_below="@id/cancel_trip_title" android:layout_centerHorizontal="true">
        <RelativeLayout android:id="@id/line_content_passenger" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true">
            <RelativeLayout android:id="@id/view_tip_passenger" android:layout_width="@dimen/cancel_trip_icon_dot_width" android:layout_height="fill_parent" android:layout_alignBottom="@id/cancel_trip_text">
                <View android:id="@id/view_dot_passenger" android:background="@drawable/shape_bg_dot" android:visibility="gone" android:layout_width="@dimen/cancel_trip_icon_dot_width" android:layout_height="@dimen/cancel_trip_icon_dot_width" android:layout_marginTop="@dimen/cancel_trip_down_line_height" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" />
