            </RelativeLayout>
            <TextView android:gravity="center_horizontal" android:id="@id/cancel_trip_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" style="@style/TextView.LightGray.Small" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/line_content_driver" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_below="@id/line_content_passenger">
            <RelativeLayout android:id="@id/view_tip_driver" android:layout_width="@dimen/cancel_trip_icon_dot_width" android:layout_height="fill_parent" android:layout_alignBottom="@id/driver_feedback_text">
                <View android:id="@id/view_line_driver" android:background="@color/light_s_gray" android:layout_width="@dimen/canel_trip_line_width" android:layout_height="@dimen/cancel_trip_up_line_height" android:layout_marginBottom="@dimen/cancel_trip_icon_dot_bottom_margin" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" />
                <View android:id="@id/view_dot_driver" android:background="@drawable/shape_bg_dot" android:layout_width="@dimen/cancel_trip_icon_dot_width" android:layout_height="@dimen/cancel_trip_icon_dot_width" android:layout_below="@id/view_line_driver" />
            </RelativeLayout>
            <TextView android:gravity="top|left|center" android:id="@id/cancel_trip_title_driver" android:paddingTop="@dimen/cancel_trip_car_tv_top_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/cancel_trip_icon_dot_margin" android:text="@string/cancel_trip_driver_reason" android:layout_toRightOf="@id/view_tip_driver" android:layout_alignParentTop="true" style="@style/TextView.LightGray.Small" />
            <TextView android:gravity="top|left|center" android:id="@id/driver_feedback_text" android:paddingTop="@dimen/cancel_trip_car_tv_top_margin" android:paddingBottom="@dimen/cancel_trip_car_tv_top_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/cancel_trip_icon_dot_margin" android:singleLine="false" android:layout_toRightOf="@id/cancel_trip_title_driver" android:layout_alignTop="@id/cancel_trip_title_driver" style="@style/TextView.LightGray.Small" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>