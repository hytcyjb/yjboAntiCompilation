<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:x="http://schemas.android.com/apk/res/com.sdu.didi.psnger">
    <x.RelativeLayout android:gravity="center" android:id="@id/line_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/detail_line_layout_margin_top" android:layout_below="@id/cost_detail_title_bar">
        <x.ImageView android:id="@id/detail_line_left" style="@style/Line_LineImage" />
        <TextView android:id="@id/detail_type_tip" android:text="@string/detail_cost" android:layout_toRightOf="@id/detail_line_left" style="@style/Line_TipText" />
        <x.ImageView android:layout_toRightOf="@id/detail_type_tip" style="@style/Line_LineImage" />
